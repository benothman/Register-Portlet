<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"> 
    <portlet>
        <description>
            Register Portlet allows administrator to register new users, or users
            to register themselves if the administrator give them access.
            This portlet is based on JSF (richfaces) and aims to replace the existing one
            built with eXo PlatForm WebUI.
        </description>
        <portlet-name>JSFRegisterPortlet</portlet-name>
        <display-name>JSF Register Portlet</display-name>
        <!--portlet-class>org.jboss.gatein.portlet.RegisterPortlet</portlet-class -->
        <portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>

        <init-param>
            <name>javax.portlet.faces.preserveActionParams</name>
            <value>true</value>
        </init-param>

        <init-param>
            <name>javax.portlet.faces.defaultViewId.view</name>
            <value>/WEB-INF/jsf/view.xhtml</value>
        </init-param>
        <init-param>
            <name>javax.portlet.faces.defaultViewId.edit</name>
            <value>/WEB-INF/jsf/edit.xhtml</value>
        </init-param>
        <init-param>
            <name>javax.portlet.faces.defaultViewId.help</name>
            <value>/WEB-INF/jsf/help.xhtml</value>
        </init-param>

        <init-param>
            <name>jspDir</name>
            <value>/WEB-INF/jsp/</value>
        </init-param>
        <init-param>
            <name>ViewPage</name>
            <value>/WEB-INF/jsp/view.jsp</value>
        </init-param>
        <init-param>
            <name>EditPage</name>
            <value>/WEB-INF/jsp/edit.jsp</value>
        </init-param>
        <init-param>
            <name>HelpPage</name>
            <value>/WEB-INF/jsp/help.jsp</value>
        </init-param>
        <init-param>
            <name>ErrorPage</name>
            <value>/WEB-INF/jsp/error.jsp</value>
        </init-param>
        <init-param>
            <name>ErrorPageJSF</name>
            <value>/WEB-INF/jsf/error.xhtml</value>
        </init-param>

        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>Register Portlet</title>
        </portlet-info>
    </portlet>
</portlet-app>