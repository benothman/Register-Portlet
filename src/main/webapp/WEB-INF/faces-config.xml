<?xml version='1.0' encoding='UTF-8'?>

<!-- ============ FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">


    <navigation-rule>
        <from-view-id>/WEB-INF/jsf/view.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/WEB-INF/jsf/success.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/WEB-INF/jsf/cancel.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/WEB-INF/jsf/cancel.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>restart</from-outcome>
            <to-view-id>/WEB-INF/jsf/view.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <managed-bean>
        <managed-bean-name>resource</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.ResourceBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>registerBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.RegisterBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>calendarBean</property-name>
            <value>#{calendarBean}</value>
        </managed-property>
        <!--managed-property>
            <property-name>passwordValidationBean</property-name>
            <value>#{passwordValidationBean}</value>
        </managed-property-->
    </managed-bean>
    <managed-bean>
        <managed-bean-name>calendarBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.CalendarBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>passwordValidationBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.PasswordValidationBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>registerBean</property-name>
            <value>#{registerBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>captchaValidatorBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.CaptchaValidatorBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>registerBean</property-name>
            <value>#{registerBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>appBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.ApplicationBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>profileMappingBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.ProfileMappingBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>testBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.TestBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>calendarBean</property-name>
            <value>#{calendarBean}</value>
        </managed-property>
    </managed-bean>
    
    <validator>
        <validator-id>inputTextValidator</validator-id>
        <validator-class>org.jboss.gatein.jsf.validator.GateInInputTextValidator</validator-class>
    </validator>
    <validator>
        <validator-id>passwordValidator</validator-id>
        <validator-class>org.jboss.gatein.jsf.validator.PasswordValidator</validator-class>
    </validator>
    <validator>
        <validator-id>emailValidator</validator-id>
        <validator-class>org.jboss.gatein.jsf.validator.EmailValidator</validator-class>
    </validator>

    <component>
        <component-type>org.jboss.gatein.jsf.component.UIBubbleInfo</component-type>
        <component-class>org.jboss.gatein.jsf.component.UIBubbleInfo</component-class>
    </component>
    <component>
        <component-type>org.jboss.gatein.jsf.html.HtmlBubbleInfo</component-type>
        <component-class>org.jboss.gatein.jsf.html.HtmlBubbleInfo</component-class>
    </component>
    <component>
        <component-type>org.jboss.gatein.jsf.html.GateInHtmlInputText</component-type>
        <component-class>org.jboss.gatein.jsf.html.GateInHtmlInputText</component-class>
    </component>

    <render-kit>
        <renderer>
            <description>Renderer for the bubble info component</description>
            <component-family>BIFAMILY</component-family>
            <renderer-type>BUBBLE_INFO_RENDERER</renderer-type>
            <renderer-class>org.jboss.gatein.jsf.renderer.BubbleInfoRenderer</renderer-class>
        </renderer>
    </render-kit>

    <application>
        <view-handler>org.jboss.portletbridge.application.PortletViewHandler</view-handler>
        <!--view-handler>com.sun.facelets.FaceletViewHandler</view-handler -->
        <state-manager>org.jboss.portletbridge.application.PortletStateManager</state-manager>
        <!--application-extension>
            <excluded-attributes>
                <excluded-attribute>org.jboss.gatein.bean.*</excluded-attribute>
            </excluded-attributes>
        </application-extension -->
    </application>

</faces-config>
