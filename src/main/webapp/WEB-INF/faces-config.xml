<?xml version='1.0' encoding='UTF-8'?>

<!-- ============ FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">


    <managed-bean>
        <managed-bean-name>registerBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.RegisterBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>calendarBean</property-name>
            <value>#{calendarBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>calendarBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.CalendarBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>appBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.ApplicationBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>testBean</managed-bean-name>
        <managed-bean-class>org.jboss.gatein.bean.TestBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>calendarBean</property-name>
            <value>#{calendarBean}</value>
        </managed-property>
    </managed-bean>
    
    <validator>
        <validator-id>inputTextValidator</validator-id>
        <validator-class>org.jboss.gatein.jsf.GateInInputTextValidator</validator-class>
    </validator>
    <component>
        <component-type>gatein</component-type>
        <component-class>org.jboss.gatein.jsf.GateInHtmlInputText</component-class>
    </component>

    <application>
        <view-handler>org.jboss.portletbridge.application.PortletViewHandler</view-handler>
        <!--view-handler>com.sun.facelets.FaceletViewHandler</view-handler -->
        <state-manager>org.jboss.portletbridge.application.PortletStateManager</state-manager>
        <application-extension>
            <excluded-attributes>
                <excluded-attribute>org.jboss.gatein.bean.*</excluded-attribute>
            </excluded-attributes>
        </application-extension>
    </application>

</faces-config>
